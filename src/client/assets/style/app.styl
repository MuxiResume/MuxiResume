// Specify overrides (theme and/or base variables etc.)
// See https://vuetifyjs.com/quick-start
$theme := {
  primary: #262C34
  accent: #ce93d8
  secondary: #424242
  info: #0D47A1
  warning: #ffb300
  error: #B71C1C
  success: #2E7D32
}

// Import Vuetify styling
// @require '~vuetify/src/stylus/main.styl'

// Main transition effect.
.page-enter-active, .page-leave-active {
  transition: opacity .25s
}
.page-enter, .page-leave-active {
  opacity: 0
}

// Paginate transition effect.
.slide-left-enter,
.slide-right-leave-active {
  opacity: 0;
  transform: translate(30px, 0);
}
.slide-left-leave-active,
.slide-right-enter {
  opacity: 0;
  transform: translate(-30px, 0);
}

// global Reset
body, html, h1, h2, h3, h4, h5, h6, p, a, img{
  margin: 0
	padding: 0
	border: 0
	font-size: 100%
	font: inherit
	vertical-align: baseline
}
body {
	line-height: 1
  font-size: 12px
}
ol, ul {
	list-style: none
}
a {
  text-decoration: none
  font-size: 12px
  color: #A6A6A6
}
a:hover {
  color: #FFFFFF
}
input {
  outline: 0
}
