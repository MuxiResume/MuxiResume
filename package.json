{
  "name": "muxi-resume",
  "version": "0.0.1",
  "description": "A online resume generation tool",
  "author": "stephenliu <stephenlyao@yeah.net>",
  "private": true,
  "scripts": {
    "dev": "backpack dev",
    "build": "cross-env NODE_ENV=production run-p build-client build-server",
    "start": "cross-env NODE_ENV=production run-p start-app",
    "now-start": "node ./dist/server/main.js",
    "stop": "run-p stop-*",
    "deploy": "node ./scripts/deploy.js",
    "create-admin": "node ./scripts/create-admin.js",
    "git": "run-s git-*",
    "start-app": "pm2 start ./dist/server/main.js -i max",
    "stop-app": "pm2 delete all",
    "start-db": "mongod --fork --dbpath ./db/data --logpath ./db/logs/mongodb.log",
    "stop-db": "mongo --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "build-server": "backpack build",
    "build-client": "nuxt build",
    "clean": "rimraf ./db",
    "precommit": "run-s lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "git-pull": "git pull",
    "git-push": "git add . && git commit -m 'General Update' && git push -u origin master"
  },
  "dependencies": {
    "@nuxtjs/component-cache": "^0.1.5",
    "@nuxtjs/pwa": "^0.2.0",
    "argon2": "^0.16.1",
    "axios": "^0.16.2",
    "body-parser": "^1.17.2",
    "compose-middleware": "^2.2.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "express-jwt-blacklist": "^1.1.0",
    "express-list-endpoints": "^3.0.0",
    "express-useragent": "^1.0.7",
    "js-cookie": "^2.1.4",
    "jsonwebtoken": "^7.4.1",
    "jwt-decode": "^2.2.0",
    "mongodb": "^2.2.28",
    "mongoose": "^4.10.5",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "nuxt": "^1.0.0-alpha.4",
    "pm2": "^2.5.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "slug": "^0.9.1",
    "source-map-support": "^0.4.15",
    "speakeasy": "^2.0.0",
    "uuid": "^3.0.1",
    "vue-router": "^2.5.3",
    "vue-validator": "^3.0.0-alpha.2",
    "vuetify": "^0.12.7",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "backpack-core": "^0.3.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-html": "^2.0.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^0.11.2",
    "now-client": "^1.1.1",
    "rimraf": "^2.6.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1"
  }
}
